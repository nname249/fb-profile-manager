{
    "name": "profile-fb",
    "version": "1.2.3",
    "description": "Facebook Profile Manager Professional",
    "main": "./out/main/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/nname249/fb-profile-manager.git"
    },
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "start": "electron-vite preview",
        "dist": "electron-vite build && electron-builder --publish always",
        "postinstall": "electron-rebuild"
    },
    "build": {
        "appId": "com.nname249.fb-profile",
        "productName": "FB Profile",
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "FB-Profile",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico",
            "runAfterFinish": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "nname249",
                "repo": "fb-profile-manager"
            }
        ],
        "files": [
            "out/**/*",
            "package.json",
            "icon.ico"
        ],
        "asar": true
    },
    "dependencies": {
        "@electron-toolkit/utils": "^4.0.0",
        "better-sqlite3": "^12.6.2",
        "electron-updater": "^6.7.3",
        "lucide-react": "^0.477.0",
        "playwright-core": "^1.58.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.2.1",
        "@vitejs/plugin-react": "^5.1.3",
        "autoprefixer": "^10.4.27",
        "electron": "^33.0.2",
        "electron-builder": "^26.7.0",
        "electron-vite": "^5.0.0",
        "playwright": "^1.58.1",
        "playwright-stealth": "^0.0.1",
        "postcss": "^8.5.6",
        "sqlite3": "^5.1.7",
        "tailwindcss": "^4.2.1",
        "vite": "^7.3.1"
    }
}